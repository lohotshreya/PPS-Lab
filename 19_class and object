#WITHOUT CONSTRUCTOR
# Define a class
class Person:
 # Method to set data
 def set_data(self, name, age):
     self.name = name
     self.age = age
 # Method to display data
 def greet(self):
     print(f"Hello, my name is {self.name} and I am {self.age} years old.")
# Create an object
person1 = Person()
# Set values using method
person1.set_data("Shreya", 18)
# Call the greet method
person1.greet()

WITH CONSTRUCTOR
class Person:
 def __init__(self, name, age):
     self.name = name
     self.age = age
 def display_info(self):
     print("Name:", self.name)
     print("Age:", self.age)
# Example usage
person1 = Person("Shreya", 18)
person1.display_info()
