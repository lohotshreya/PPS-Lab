def display_menu():
    print("\n Dictionary Operations Menu:")
    print("1. Add a key-value pair")
    print("2. Update a value")
    print("3. Delete a key")
    print("4. Display the dictionary")
    print("5. Exit")

# Starting with an empty dictionary
my_dict = {}

while True:
    display_menu()
    choice = input("Choose an option (1-5): ")

    if choice == '1':
        key = input("Enter key to add: ")
        value = input("Enter value: ")
        my_dict[key] = value
        print(f"Added: {key} ‚Üí {value}")

    elif choice == '2':
        key = input("Enter key to update: ")
        if key in my_dict:
            new_value = input("Enter new value: ")
            my_dict[key] = new_value
            print(f"Updated: {key} ‚Üí {new_value}")
        else:
            print("Key not found")

    elif choice == '3':
        key = input("Enter key to delete: ")
        if key in my_dict:
            del my_dict[key]
            print(f"Deleted key: {key} üóëÔ∏è")
        else:
            print("Key not found")

    elif choice == '4':
        print("\n Current Dictionary Contents:")
        for k, v in my_dict.items():
            print(f"  {k} : {v}")

    elif choice == '5':
        print("Exiting the program.")
        break

    else:
        print("Invalid choice, try again!")
